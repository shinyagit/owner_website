<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title + " | ProCode" %></title>
    <!-- reset css -->
    <%= stylesheet_link_tag "reset" %>
    <!-- import css files -->
    <%= stylesheet_link_tag "layout" %>
    <%= stylesheet_link_tag "site" %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.2/css/drawer.min.css">
    <%= stylesheet_link_tag "drawer" %>
    <%= stylesheet_link_tag "svg" %>
    <!-- readable css -->
    <%= stylesheet_link_tag "readable" %>
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- font awesome -->
    <script src="https://use.fontawesome.com/db836a4076.js"></script>
    <!-- import javascript files -->
    <%= javascript_include_tag "site" %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iScroll/5.2.0/iscroll.min.js"></script>
    <!-- drawer.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.2/js/drawer.min.js"></script>
    <%= javascript_include_tag "drawer" %>
    <!-- readable js file -->
    <%= javascript_include_tag "readable" %>
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css?family=Play" rel="stylesheet">

  </head>
  <body class="drawer drawer--right">
    <header role="banner">
    <button type="button" class="drawer-toggle drawer-hamburger">
      <span class="sr-only">toggle navigation</span>
      <span class="drawer-hamburger-icon"></span>
    </button>
    <nav class="drawer-nav" role="navigation">
      <ul class="drawer-menu">
        <li><a class="drawer-brand" href="#">ProCode</a></li>
        <li><a class="drawer-menu-item" href="#">TOP</a></li>
        <li><a class="drawer-menu-item" href="#">ABOUT</a></li>
        <li><a class="drawer-menu-item" href="#">GALLERY</a></li>
        <li><a class="drawer-menu-item" href="#">CONTACT</a></li>
      </ul>
    </nav>
  </header>

  <div id="yield-wrapper">
    <%= yield %>
  </div>

  <footer>
    <p>Copy Right <i class="fa fa-copyright" aria-hidden="true"></i> 2017 ProCode All Rights Reserved.</p>
  </footer>
  </body>
</html>
